syntax enable

colorscheme elflord
set ffs=unix,dos,mac
set encoding=utf8
set noexpandtab
set shiftwidth=4
set tabstop=8
set autoindent
set autoread
set hlsearch
set lazyredraw
set magic
set showmatch
set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l
map <C-Left> :tabprevious<CR>
map <C-Right> :tabnext<CR>
